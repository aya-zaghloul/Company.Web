@model ResetPasswordViewModel
@{
    ViewData["Title"] = "ResetPassword";
    Layout = "~/Views/Shared/AuthenticationLayout.cshtml";
}

<h1>ResetPassword</h1>
<form asp-action="ForgetPassword" method="post">
    <input type="hidden" asp-for="Email" />
    <input type="hidden" asp-for="Token" />
    <div asp-validation-summary="All" class="text-danger"></div>

    <input type="password" asp-for="Password" placeholder="Password" class="form-control" />
    <span asp-validation-for="Email"></span>
    <br />
    <input type="password" asp-for="ConfirmPassword" placeholder="ConfirmPassword" class="form-control" />
    <span asp-validation-for="Email"></span>
    <br />
    <input type="submit" value="ChangePassword" class="btn btn-p"/>
</form>

