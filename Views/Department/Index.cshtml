
@model IEnumerable<DepartmentDto>

<a asp-controller="Department" asp-action="Create" class="btn-primary">Create New Department</a>

@if(Model.Count()>0){
    <table class="table table-striped table-hover" >
        <thead>
            <tr>
                <th> @Html.DisplayNameFor(D => D.Code)</th>
                <th> @Html.DisplayNameFor(D => D.Name)</th>
                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var department in Model)
            {
                <tr>
                    <td>@department.Code</td>
                    <td>@department.Name</td>
                    
                    @*<td>
                        <a asp-action="Details" asp-route-id="@department.Id" class="btn-warning">
                            <i class="fas fa-eye"></i>Details
                        </a>
                    </td>
                    <td>
                        <a asp-action="Details" asp-route-id="@department.Id" class="btn-danger">
                            <i class="fas fa-edit"></i>Update
                        </a>
                    </td>
                    <td>
                        <a asp-action="Details" asp-route-id="@department.Id" class="btn-success">
                            <i class="fas fa-trash"></i>Delete
                        </a>
                    </td>
                    *@
                    <partial name="_ActionButtonsPartialView" model="@department.Id.ToString()" />

                </tr>
            }
        </tbody>
    </table>
}
else{
    <div class="mt-5 alert alert-warning">
        <h3>There Is No Department</h3>
    </div>
}

